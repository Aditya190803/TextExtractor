<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="text-extractor">
  <schema id="org.gnome.shell.extensions.text-extractor" path="/org/gnome/shell/extensions/text-extractor/">
    
    <!-- Keyboard Shortcut -->
    <key name="shortcut" type="as">
      <default>['&lt;Super&gt;&lt;Shift&gt;t']</default>
      <summary>Keyboard shortcut</summary>
      <description>Keyboard shortcut to trigger text extraction</description>
    </key>
    
    <!-- OCR Language -->
    <key name="ocr-language" type="s">
      <default>'eng'</default>
      <summary>OCR language</summary>
      <description>Language code for Tesseract OCR (e.g., eng, deu, fra)</description>
    </key>
    
    <!-- Show Notification -->
    <key name="show-notification" type="b">
      <default>true</default>
      <summary>Show notification</summary>
      <description>Show notification after text extraction</description>
    </key>
    
    <!-- Save Screenshots -->
    <key name="save-screenshots" type="b">
      <default>true</default>
      <summary>Save screenshots</summary>
      <description>Keep screenshots in ~/Pictures/TextExtractor/ after OCR. If disabled, screenshots are deleted immediately after text extraction.</description>
    </key>
    
  </schema>
</schemalist>
